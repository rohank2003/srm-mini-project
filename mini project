// Online C compiler to run C program online
#include <stdio.h>

int main() {
    
    printf("Enter operation : ");
    char choice;
    scanf("%c",&choice);
    int n1,n2;
    float f1,f2;
    switch(choice){
        case '+':
        printf("Enter the numbers you want to add:\n");
       
        scanf("%d %d",&n1,&n2);
        printf("%d",n1+n2);
        break;
        
        case '-':
        printf("Enter the numbers you want to subtract : \n");
       
        scanf("%d %d",&n1,&n2);
        printf("%d",n1-n2);
        break;
        
        case '*':
        printf("Enter the numbers you want to multiply :\n");
     
        scanf("%d %d",&n1,&n2);
        printf("%d",n1*n2);
        break;
        
        case '/':
        printf("Enter the values you want to divide :\n");
        
        scanf("%f %f",&f1,&f2);
        printf("%f",f1/f2);
        break;
        
        case '%':
        printf("Enter the opearands for the modulus :\n");
        int n1,n2;
        scanf("%d %d",&n1,&n2);
        printf("%d",n1%n2);
        break;
        
        default:
        printf("Invalid input ");
        break;
        
    }
    
    return 0;
}
